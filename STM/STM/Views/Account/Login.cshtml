@model STM.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-form mt-5">
    <div class="d-flex justify-content-center">
        <h4>Авторизация</h4>
    </div>
    <form action="@Url.Action("Login", "Account")" method="POST">
        <div class="row mb-3">
            <div class="col">
                <input type="text" class="stm-text" name="Login" value="" placeholder="Login" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <input type="password" class="stm-text" name="Password" value="" placeholder="Password" />
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <input type="submit" class="stm-btn" value="Войти">
        </div>
    </form>
</div>

<div class="login-form mt-3">
    <div class="text-center">
        У вас еще нет аккаунта? @Html.ActionLink("Регистрация", "Register", "Account")
    </div>
</div>

